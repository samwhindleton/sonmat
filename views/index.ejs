<!DOCTYPE html>
<html lang="en">
  <head>
    <% include partials/head %>
  </head>
  <body>
    <div class="container">
      <!-- <h1>Hello, World!</h1> -->

      <!-- header -->
      <div class="row header">
        <div class="ten columns">
          <h1>Sonmat</h1>
        </div>
        <!-- login/signup buttons -->
        <div class="two columns">
          <% if (currentUser) { %>
            <form action="/session?_method=DELETE" method="POST">
              <button class="button" type="submit" formmethod="POST">log out</button>
            </form>
          <% } else { %>
            <!-- login -->
            <form action="/session/new" method="GET">
              <button class="button" type="submit" formmethod="GET">log in</button>
            </form>
            <!-- signup -->
            <form action="/user/new" method="GET">
              <button class="button" type="submit" formmethod="GET">sign up</button>
            </form>
          <% } %>
        </div>
      </div>

      <div class="row">
        <h1>
          <% if (currentUser) { %>
            Welcome <%=currentUser.username%>!
          <% } else { %>
            Welcome!
          <% } %>
        </h1>
      </div>

    </div>

    <!-- footer -->
    <% include partials/footer %>
    <!-- JavaScript -->
    <% include partials/js %>
  </body>
</html>
